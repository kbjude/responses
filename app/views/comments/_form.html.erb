<%= form_with model: [@article, @article.comments.build] do |f| %>
    <div>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter, class: "form-control" %>
        <% @article.errors.full_messages_for(:commenter).each do |message| %>
            <div> <%= message %>
        <% end %>
    <div><br>
    <div>
        <%= f.label :body %> <br>
        <%= f.text_area :body, class: "form-control", rows: 5 %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', articles_path %>